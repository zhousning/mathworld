<view class='container'>
  <view class='game-question-ctn' style='background:{{GameBackground}}'>
    <text>{{ParamA}}{{Operator}}{{ParamB}}=?</text>
  </view>
  <view class='game-countdown-ctn'  style='background:{{GameBackground}}'>
    <!--<progress percent="{{ProgressValue}}" backgroundColor="transparent" color='{{GameBackground}}' stroke-width="30" />-->
    <text>{{CountDown}}</text>
  </view>
  <view class='game-answer-ctn'>
    <block wx:for='{{AnswerOptions}}'>
      <view class='game-option-ctn'>
        <a class="game-answer-option game-option-front {{ active == index || active == -1  ? 'game-option-front-active' : '' }}" data-answer-index='{{index}}' data-true-answer='{{TrueAnswer}}' data-answer-option='{{item}}' bindtap='checkAnswer'>
          <text>{{item}}</text>
        </a>
        <a class="game-answer-option game-option-opposite {{ active == index || active == -1 ? 'game-option-opposite-active' : '' }}" data-true-answer='{{TrueAnswer}}' data-answer-option='{{item}}'>
          <text wx:if='{{TrueAnswer == item}}'>{{Score}}分</text>
          <text wx:else>0分</text>
        </a>
      </view>
    </block>
  </view>
