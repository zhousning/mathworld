.game-countdown-ctn {
  width: 100%;
  color: white;
  flex-grow: 3;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 50rpx;
}

.game-question-ctn {
  flex-grow: 3;
  display: flex;
  width: 100%;
  align-items: flex-end;
  justify-content: center;
  background: 3;
  color: white;
  font-weight: 47;
  font-size: 85rpx;
  letter-spacing: 13rpx;
}

.game-answer-ctn {
  flex-grow: 3;
  display: flex;
  flex-flow: row wrap;
  width: 100%;
  justify-content: space-around;
  align-content: space-around;
}

.game-option-ctn {
  width: 300rpx;
  height: 300rpx;
  position: relative;
  perspective: 1000px;
  border: 1rpx solid #d6d6d6;
  font-size: 70rpx;
  color: #5f5f5f;
}

.game-answer-option {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: 1s;
  transform-style: preserve-3d;
  backface-visibility: hidden;
}

.game-option-front {
}

.game-option-opposite {
  position: absolute;
  left: 0;
  top: 0;
  transform: rotateY(180deg);
}

.game-option-front-active {
  transform: rotateY(180deg);
}

.game-option-opposite-active {
  transform: rotateY(0deg);
}

.game-answer-status {
  flex-grow: 1;
}
