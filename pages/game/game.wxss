.game-question-ctn {
  flex-grow: 1;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: white;
  background-size: 200% auto;
  color: white;
  box-shadow: 0 0 20px #eee;
}

.game-countdown-text {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 50rpx;
}

.game-question-text {
  display: flex;
  width: 100%;
  align-items: flex-end;
  justify-content: center;
  background: 3;
  font-weight: 47;
  font-size: 85rpx;
  letter-spacing: 13rpx;
}

.game-surplus-text {
  font-size: 35rpx;
  text-align: center;
  margin-top: 15rpx;
}

.game-question-text text {
  margin-right: 15rpx;
}

