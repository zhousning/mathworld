.score-ctn {
  font-family: Georgia;
}

.score-my-ctn {
  width: 90%;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 140rpx 0rpx;
  font-size: 80rpx;
  margin-bottom: 15rpx;
  background: linear-gradient(to right, #4bccf3, #50adf3);
  border-radius: 15rpx;
}

.score-item-ctn {
  width: 100%;
  color: #839297;
}

.score-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0rpx;
  font-size: 36rpx;
  margin: 0rpx 50rpx;
}

.score-item-index {
  width: 15%;
  color: #ff8a62;
}

.score-item-rank {
  width: 15%;
  background: #9ad636;
  color: white;
  padding: 5rpx;
  text-align: center;
  border-radius: 50rpx;
}

.score-item-userinfo {
  width: 57%;
  display: flex;
  align-items: center;
  color: #4cbcfe;
}

.score-item-avatarurl {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 60rpx;
}

.score-item-mark {
  display: flex;
  flex-flow: column;
  justify-content: flex-end;
  align-items: center;
}
